<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vBox" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.preguntados.controller.front.NewUserController">
    <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
              <Label text="Nombre de usuario:">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
              <TextField fx:id="usernameField">
               <VBox.margin>
                  <Insets left="40.0" right="40.0" />
               </VBox.margin></TextField>
              <Label text="Repite el usuario:">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Label>
              <PasswordField fx:id="usernameRepeatField">
               <VBox.margin>
                  <Insets left="40.0" right="40.0" />
               </VBox.margin></PasswordField>
            <Label fx:id="error" text="" textFill="RED">
               <VBox.margin>
                  <Insets left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Label>
         </children>
         <VBox.margin>
            <Insets left="30.0" right="30.0" top="20.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER" prefHeight="89.0" prefWidth="600.0">
         <children>
              <Button onAction="#crearCuenta" text="Crear cuenta ">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </Button>
              <Button mnemonicParsing="false" onAction="#atras" text="Volver">
               <HBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
    </children>
</VBox>
